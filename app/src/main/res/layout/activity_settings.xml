<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:focusableInTouchMode="true"
    tools:context=".Settings">

    <TextView
        android:id="@+id/barTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/barColor"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:paddingVertical="3dp"
        android:text="TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setInfo"
        android:layout_below="@id/barTitle"
        android:textColor="@color/barColor"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Set Patient Info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pname"
        android:layout_below="@id/setInfo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Patient Name"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/pname_input"
        android:layout_below="@id/setInfo"
        android:backgroundTint="@color/barColor"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="150dp" />


    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/pcode"-->
        <!--android:layout_below="@id/pname"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:textColor="@color/white"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:textSize="20sp"-->
        <!--android:text="Patient Code"/>-->

    <!--<EditText-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/pcode_input"-->
        <!--android:layout_below="@id/pname_input"-->
        <!--android:backgroundTint="@color/barColor"-->
        <!--android:textSize="20sp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginLeft="150dp" />-->

    <Button
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:id="@+id/setInfoButton"
        android:background="@drawable/roundedrec"
        android:layout_below="@id/setInfo"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white"
        android:text="Set"/>

    <View
        android:id="@+id/dv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/pname"
        android:layout_marginTop="45dp"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_invite"
        android:layout_below="@id/dv1"
        android:textColor="@color/barColor"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Send Invitation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/send_invite"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Email"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/email_input"
        android:layout_below="@id/send_invite"
        android:backgroundTint="@color/barColor"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="150dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:id="@+id/sendInviButton"
        android:background="@drawable/roundedrec"
        android:layout_below="@id/send_invite"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white"
        android:text="Send"/>

    <View
        android:id="@+id/dv2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/email"
        android:layout_marginTop="45dp"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_cli"
        android:layout_below="@id/dv2"
        android:textColor="@color/barColor"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Add clinician"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clinician"
        android:layout_below="@id/add_cli"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Clinician"/>


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/clinician_input"
        android:layout_below="@id/add_cli"
        android:backgroundTint="@color/barColor"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="150dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passcode"
        android:layout_below="@id/clinician"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Passcode"/>

    <EditText
        android:id="@+id/pw_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/clinician_input"
        android:inputType="numberPassword"
        android:backgroundTint="@color/barColor"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="150dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:id="@+id/addClinicianButton"
        android:background="@drawable/roundedrec"
        android:layout_below="@id/add_cli"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/gray"
        android:textColor="@color/white"
        android:text="Add"/>

</RelativeLayout>